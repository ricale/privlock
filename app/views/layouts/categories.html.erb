<% content_for :stylesheet do %>
  <%= stylesheet_link_tag "categories", media: "all", "data-turbolinks-track" => true %>
<% end %>

<% content_for :javascript do %>
  <%= javascript_include_tag "categories", "data-turbolinks-track" => true %>
<% end %>

<% content_for :container do %>

  <div class="row">
    <div class='col-md-10 col-md-offset-1'>
      <%= render 'header' %>
    </div>
  </div>

  <% if content_for?(:menu) %>
  <div class='menu'>
    <%= yield(:menu) %>
  </div>
  <% end %>

  <div class="row">
    <div class='contents col-md-10 col-md-offset-1'>
      <%= yield %>
    </div>
  </div>

<% end %>

<%= render template: "layouts/application" %>
