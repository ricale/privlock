<% unless flash[:info].nil? %>
<div class="alert-custom text-info alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= flash[:info] %>
</div>
<% end %>

<% unless flash[:notice].nil? %>
<div class="alert-custom text-success alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= flash[:notice] %>
</div>
<% end %>

<% unless flash[:alert].nil? %>
<div class="alert-custom text-danger alert-dismissable">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= flash[:alert] %>
</div>
<% end %>
