<%= form_for(category) do |f| %>
  <%= f.text_field :name %>
  <% unless parents.empty? %>
    <%= f.label :parent_id %>
    <%= f.select :parent_id,
                 options_from_collection_for_select(parents, 'id', 'name', category.parent_id) %>

    <%= f.submit submit_text %>
  <% end %>
<% end %>
