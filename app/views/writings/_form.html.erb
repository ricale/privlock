<%= form_for writing, html: {class: "form"} do |f| %>
  <% if writing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

      <ul>
      <% writing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "control-label sr-only" %>
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, class: "control-label sr-only" %>
    <%= f.select :category_id,
                 options_from_collection_for_select(@categories, 'id', 'name', writing.category_id),
                 {include_blank: "Choose Category"},
                 {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "control-label sr-only" %>
    <%= f.text_area :content, rows: 20, placeholder: "Content", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <button type="button" data-toggle="modal" data-target="#preview-modal" class="btn btn-info" id="open-preview-modal-button">Preview</button>
  </div>

<% end %>
