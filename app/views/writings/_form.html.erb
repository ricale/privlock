<%= form_for writing, html: {class: "form form-horizontal"} do |f| %>
  <% if writing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

      <ul>
      <% writing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "control-label col-md-1" %>
    <div class="col-md-11">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, class: "control-label col-md-1" %>
    <div class="col-md-11">
      <%= f.select :category_id,
                   options_from_collection_for_select(@categories, 'id', 'name', writing.category_id),
                   {},
                   {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "control-label col-md-1" %>
    <div class="col-md-11">
      <%= f.text_area :content, rows: 20, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-11 col-md-offset-1">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
