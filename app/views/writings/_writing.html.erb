<%= div_for writing do %>
  <div class="title">
    <h3><%= link_to writing.title, show_path(writing) %></h3>
  </div>

  <div class="writing_category">
    <%= get_chained_categories(writing.category) %>
  </div>

  <div class="info">
    <div class="created_at"><%= get_formatted_time writing.created_at %></div>
    <div class="updated_at">(<%= get_formatted_time writing.updated_at %>)</div>
  </div>

  <% if current_user.try(:admin) %>
  <div class="menu">
    <%= link_to 'Edit', edit_writing_path(writing) %>
    <%= link_to 'Delete', writing_path(writing), method: :delete, confirm: 'Are you sure?' %>
  </div>
  <% end %>

  <div class="content">
    <%= writing.content %>
  </div>

  <% if current_user.try(:admin) %>
  <div class="menu">
      <%= link_to 'Edit', edit_writing_path(writing) %>
      <%= link_to 'Delete', writing_path(writing), method: :delete, confirm: 'Are you sure?' %>
  </div>
  <% end %>
<% end %>