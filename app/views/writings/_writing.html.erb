<%= div_for writing do %>
  <div class="title">
    <h3><%= link_to writing.title, show_path(writing) %></h3>
  </div>

  <div class="writing_category">
    <%= writing.category.ancestors_and_me.map { |category| 
      link_to category.name, category_writings_path(category)
    }.join("/").html_safe %>
  </div>

  <div class="menu">
    <% if current_user.try(:admin) %>
      <%= link_to 'Edit', edit_writing_path(writing) %>
      <%= link_to 'Delete', writing_path(writing), method: :delete, confirm: 'Are you sure?' %>
    <% end %>
  </div>

  <div class="content">
    <%= writing.content %>
  </div>
<% end %>