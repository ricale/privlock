<%= render partial: 'comments/info',
           locals: {
            writing_id:        @writing_id,
            updated_timestamp: @updated_timestamp,
            comments_count:    @writings_comments_count
           } %>

<%= render partial:    'comments/create',
           collection: @new_comments,
           as:         :comment,
           locals:     { writing_id: @writing_id } %>

<%= render partial:    'comments/update',
           collection: @updated_comments,
           as:         :comment %>

$("#comment_<%= @comment_id %> .delete_comment").remove();
$("#comment_<%= @comment_id %>").fadeOut(2000);