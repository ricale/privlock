<%= form_for comment do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation"><%= comment.errors.full_messages.first %></div>
  <% end %>

  <% unless current_user %>
    <% if comment.name.nil? %>
    <div class="field">
      <%= f.label :name, 'name (*)' %>
      <%= f.text_field :name %>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'password (*)' %>
      <%= f.password_field :password %>
    </div>

    <% if comment.name.nil? %>
    <div class="field">
      <%= f.label :email, 'email' %>
      <%= f.text_field :email %>
    </div>
    <% end %>
  <% end %>

  <% if comment.content.nil? %>
  <div class="field">
    <%= f.hidden_field :writing_id, value: writing_id %>
  </div>
  <% end %>

  <div class="field">
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
